---
interface Props {
  level: 1 | 2;
}

type Heading = "h1" | "h2";

const { level } = Astro.props;

const className = { "1": "text-2xl", "2": "text-xl" }[level];
const Tag = { "1": "h1", "2": "h2" }[level] as Heading;
---

<Tag class={`my-4 leading-7 text-justify ${className}`}>
  <slot />
</Tag>
